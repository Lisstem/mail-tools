#!/usr/bin/env ruby
# frozen_string_literal: true

db = nil
begin
  require "bundler/setup"
  require "mail_tools"

  db = MailTools::DB
  puts(MailTools::Config.config.reject { | k, _ | k == "password" })
  MailTools::DB.init_with_config
  MailTools::Command.execute(ARGV)

ensure
  db&.close
end


